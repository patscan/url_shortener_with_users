<div class="container">
  <h1>Sign up and save your links today</h1>

  <form name="input" action="/new_account" method="post">
    <p><div class="form_label">Name:</div> <input type="text" name="name"> </p>
    <p><div class="form_label">Email:</div> <input type="text" name="email"> </p>
    <p><div class="form_label">Password:</div> <input type="password" name="password"></p>
    <p><input type="submit" value="Create account!"></p>
  </form>

  <div id="error"><%= @error_message %></div>

</div>
